<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pregunta1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_white"
    tools:context=".Pregunta1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/inter"
            android:text="Título de la pregunta"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/explicacionRespuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/inter"
            android:text="Marca un solo óvalo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <RadioGroup
                android:layout_width="591dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_margin="40dp">

                <RadioButton
                    android:id="@+id/rb_muchisimo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me gusta muchísimo"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_mucho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me gusta mucho"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_moderadamente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me gusta moderadamente"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_un_poco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me gusta un poco"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_neutro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ni me gusta ni me disgusta"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_disgusta_poco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me disgusta un poco"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_disgusta_moderadamente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me disgusta moderadamente"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_disgusta_mucho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me disgusta mucho"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_disgusta_muchisimo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me disgusta muchísimo"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"/>

            </RadioGroup>

        </LinearLayout>
        <Button
            android:id="@+id/buttonStart"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_greensabora"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Siguiente"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="70dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>